+			sum = 0;
+		}
+		else if ('0' <= character && character <= '9') {
+			if (digitCount == 3) { return qfalse; }
+			if ('0' == character) { lastZero = qtrue; }
+			else { lastZero = qfalse; }
+			sum += (powBase10[digitCount++] * (character - '0'));
+		}
+		else { return qfalse; }
+	}
+	if (octetInx >= 0) { return qfalse; }
+	return qtrue;
